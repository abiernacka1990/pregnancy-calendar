<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_dashboard_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dashboard_empty_label_margin_top"
        android:layout_marginLeft="@dimen/dashboard_empty_label_margin"
        android:layout_marginRight="@dimen/dashboard_empty_label_margin"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/dashboard_empty_label_font"
        android:text="@string/dashboard_empty_label"/>

    <ImageView
        android:id="@+id/imageview_dashboard_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dashboard_empty_yes_margin_top"
        android:layout_below="@id/textview_dashboard_label"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_social"/>

</RelativeLayout>
